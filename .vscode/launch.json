    {
        "name": "Launch",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/src/main-process/main.js",
        "stopOnEntry": false,
        "args": [],
        "cwd": "${workspaceRoot}",
        "runtimeExecutable": "${workspaceRoot}/electron/electron-v1.3.6-darwin-x64/Electron.app/Contents/MacOS/Electron",
        "runtimeArgs": [
            ".",
            "--enable-logging"
        ],
        "env": {},
        "externalConsole": false,
        "sourceMaps": false,
        "outDir": null
    }
  ]
